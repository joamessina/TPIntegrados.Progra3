<head>
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <title><%= empresa && empresa.nombre ? empresa.nombre : 'Tienda' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/admin.css" />
</head>

<body>
  <header class="bg-white shadow-sm">
    <!-- NAV SUPERIOR -->
    <nav class="navbar navbar-expand-md navbar-light bg-primary">
      <div class="container">
        <div class="navbar-nav me-auto">
          <a href="/admin/dashboard" class="nav-link text-white">Dashboard</a>
          <a href="/admin/productos/nuevo" class="nav-link text-white">Agregar Producto</a>
        </div>
        <% if (session && session.usuario) { %>
          <div class="navbar-nav">
            <span class="nav-link text-white me-3"><%= session.usuario.email %></span>
            <a href="/admin/logout" class="btn btn-outline-light btn-sm">Cerrar sesi√≥n</a>
          </div>
        <% } %>
      </div>
    </nav>

    <!-- LOGOS + NOMBRE -->
    <div class="container py-3">
      <div class="row align-items-center text-center text-md-start">
        <div class="col-md-2 col-12 mb-2 mb-md-0">
          <img
            src="<%= empresa && empresa.logo ? empresa.logo : '/images/empresa_logo.png' %>"
            alt="Logo Izquierdo"
            class="img-fluid empresa-logo-header"
          />
        </div>
        <div class="col-md-8 col-12">
          <h1 class="fs-2 fw-bold text-primary text-center m-0">
            <%= empresa && empresa.nombre ? empresa.nombre : 'Tienda' %>
          </h1>
        </div>
        <div class="col-md-2 col-12 d-flex justify-content-md-end justify-content-center">
          <img
            src="/images/empresa_logo2.jpg"
            alt="Logo Derecho"
            class="img-fluid empresa-logo-header"
          />
        </div>
      </div>
    </div>
    <hr />
  </header>
