<head>
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <title><%= empresa && empresa.nombre ? empresa.nombre : 'Tienda' %></title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <link rel="stylesheet" href="/css/admin.css" />
</head>
<body>
  <header>
    <div class="container py-3">
      <div class="d-flex align-items-center justify-content-between">
        <!-- Imagen izquierda -->
        <img
          src="<%= empresa && empresa.logo ? empresa.logo : '/images/empresa_logo.png' %>"
          alt="Logo Izquierdo"
          class="img-fluid empresa-logo-header"
        />
        <!-- Nombre de empresa centrado -->
        <span
          class="fs-2 fw-bold text-primary text-center flex-grow-1"
          style="margin: 0 30px"
        >
          <%= empresa && empresa.nombre ? empresa.nombre : 'Tienda' %>
        </span>
        <!-- Imagen derecha -->
        <img
          src="/images/empresa_logo2.jpg"
          alt="Logo Derecho"
          class="img-fluid empresa-logo-header"
        />
      </div>
    </div>
    <hr />
  </header>
</body>
