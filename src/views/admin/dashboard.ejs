<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container py-4">
  <h1 class="text-center my-4">Panel de Administración</h1>
  <div class="mb-3">
    <a href="/admin/productos/nuevo" class="btn btn-success">
      <i class="bi bi-plus-circle"></i> Agregar Producto
    </a>
  </div>
  <table class="table table-striped table-dark align-middle text-center">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Tipo</th>
        <th>Expansión</th>
        <th>Precio</th>
        <th>Activo</th>
        <th>Imagen</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% productos.forEach(p => { %>
        <tr>
          <td><%= p.id %></td>
          <td><%= p.nombre %></td>
          <td><%= p.tipo %></td>
          <td><%= p.expansion %></td>
          <td>$<%= p.precio %></td>
          <td>
            <% if (p.activo) { %>
              <span class="badge bg-success">Sí</span>
            <% } else { %>
              <span class="badge bg-danger">No</span>
            <% } %>
          </td>
          <td>
          <% if (p.imagen) { %>
            <% if (p.imagen.startsWith('http')) { %>
              <img src="<%= p.imagen %>" alt="Imagen" class="img-thumbnail" style="max-width: 100px; max-height: 100px;">
            <% } else { %>
              <img src="/images/<%= p.imagen %>" alt="Imagen" class="img-thumbnail" style="max-width: 100px; max-height: 100px;">
            <% } %>
          <% } else { %>
            <span class="text-muted">(Sin imagen)</span>
          <% } %>
        </td>

          <td>
            <a href="/admin/productos/<%= p.id %>/editar" class="btn btn-sm btn-warning me-1 mb-1">Editar</a>
            <% if (p.activo) { %>
              <form method="POST" action="/admin/productos/<%= p.id %>/desactivar" style="display:inline;">
                <button type="submit" class="btn btn-sm btn-secondary me-1 mb-1">Desactivar</button>
              </form>
            <% } else { %>
              <form method="POST" action="/admin/productos/<%= p.id %>/activar" style="display:inline;">
                <button type="submit" class="btn btn-sm btn-success me-1 mb-1">Activar</button>
              </form>
            <% } %>
            <form method="POST" action="/admin/productos/<%= p.id %>/eliminar" style="display:inline;">
              <button type="submit" class="btn btn-sm btn-danger mb-1" onclick="return confirm('¿Eliminar este producto?');">Eliminar</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>
